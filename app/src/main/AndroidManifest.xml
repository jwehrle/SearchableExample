<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jwehrle.assignment3101">

    <uses-permission android:name="com.jwehrle.state.provider.READ"/>
    <uses-permission android:name="com.jwehrle.state.provider.WRITE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SearchableActivity"
            android:label="@string/title_activity_searchable"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <meta-data
            android:name="android.app.default_searchable"
            android:value=".SearchableActivity" />

        <provider
            android:authorities="com.jwehrle.state.provider"
            android:name=".StateContentProvider"
            android:enabled="true"
            android:exported="false"
            android:readPermission="com.jwehrle.state.provider.READ"
            android:writePermission="com.jwehrle.state.provider.WRITE"/>

    </application>

</manifest>